{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2015",
    "target": "ES2019",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",    
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist",

    "jsx": "react-jsx",

    "paths": {
      "*": ["node_modules/*"]
    },
  },
}
